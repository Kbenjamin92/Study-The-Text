generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id         Int        @id @default(autoincrement())
  title      String
  summary    String
  fileUrl    String
  createdAt  DateTime   @default(now())
  categories Category[] 
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  studies Study[] 
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}